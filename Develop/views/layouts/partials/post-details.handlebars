<div class="card">
  <div class="card-header">
    {{post.title}}
  </div>
  <div class="card-body">
    <blockquote class="blockquote mb-0">
      <p>{{post.text}}</p>
      <footer class="blockquote-footer">Posted by
        {{user.username}}
        on
        {{post.createdAt}}</footer>
    </blockquote>
  </div>
</div>

<div class="card">
  <div class="card-header">
    {{user.username}}
  </div>
  <div class="card-body">
    {{comment.text}}
  </div>
</div>